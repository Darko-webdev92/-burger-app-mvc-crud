
@model BurgerViewModel;

<div asp-validation-summary="All"></div>  


<form method="post">
    <div class="row">  
    <div class="form-group col-md-6 mx-auto">
    <label asp-for=Name></label>
    <input asp-for="Name"  class="form-control"/>
    </div>
    </div>
    <div class="row">  

    <div class="form-group col-md-6 mx-auto">
    <label asp-for=Price></label>
    <input asp-for="Price"   class="form-control"/>
    </div>
    </div>
    <div class="row">  

    <div class="form-check col-md-6 mx-auto mt-2">
    <input type="checkbox" value="true" asp-for="IsVegan" class="form-check-input"/>
    <label asp-for="IsVegan" class="form-check-label"></label>
    </div>
    </div>
    <div class="row">  

    <div class="form-check col-md-6 mx-auto mt-2">
    <input type="checkbox" value="true" asp-for="IsVegetarian" class="form-check-input" />
    <label asp-for="IsVegetarian" class="form-check-label"></label>
    </div>

    </div>
    <div class="row">  

    <div class="form-check col-md-6 mx-auto mt-2">
    <input type="checkbox" value="true" asp-for="HasFries"  class="form-check-input"/>
    <label asp-for="HasFries" class="form-check-label"></label>
    </div>
    </div>
    <div class="row">  
       <div class="col-md-6 mx-auto">
        <button type="submit" class="btn btn-primary">Save</button>
       </div>
    </div>
</form>
